<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wallpaper.alex.wallpaperapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_app"
        android:supportsRtl="true"
        android:theme="@style/MyFullScreenTheme">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/icon_app" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_id"
            tools:replace="android:value" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider2146744878922212"
            android:exported="true" />

        <activity android:name="com.wallpaper.alex.wallpaperapp.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wallpaper.alex.wallpaperapp.ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/MyFullScreenTheme" />
        <activity
            android:name="com.wallpaper.alex.wallpaperapp.ui.ListWallPaperActivity"
            android:theme="@style/MyFullScreenTheme" />
        <activity
            android:name="com.wallpaper.alex.wallpaperapp.ui.ViewWallPaperActivity"
            android:label="@string/title_activity_view_wall_paper"
            android:parentActivityName="com.wallpaper.alex.wallpaperapp.ui.ListWallPaperActivity"
            android:theme="@style/myThemeFullScreenOrDialg" />
        <activity android:name="com.wallpaper.alex.wallpaperapp.ui.AuthUiActivity" />
        <activity android:name="com.wallpaper.alex.wallpaperapp.ui.UploadPhotoActivity" />
        <activity
            android:name="com.wallpaper.alex.wallpaperapp.ui.ListUserImagesActivity"
            android:theme="@style/MyFullScreenTheme" />
        <activity android:name="com.wallpaper.alex.wallpaperapp.ui.ViewUserImageActivity"

            android:theme="@style/myThemeFullScreenOrDialg"/>
        <activity android:name="com.wallpaper.alex.wallpaperapp.ui.NoInternetActivity"/>

        <receiver android:name="com.wallpaper.alex.wallpaperapp.widget.IconAppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/icon_app_widget_info" />
        </receiver>

        <activity
            android:name="com.wallpaper.alex.wallpaperapp.ui.AboutActivity"

            android:theme="@style/myThemeFullScreenOrDialg"
            android:parentActivityName="com.wallpaper.alex.wallpaperapp.ui.HomeActivity" />


        <!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4680912109247750~8988384419"/>
    </application>

</manifest>